<Window x:Class="WPL1_login_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPL1_login_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Naam" HorizontalAlignment="Left" Margin="174,113,0,0" VerticalAlignment="Top"/>
        <Label Content="Wachtwoord" HorizontalAlignment="Left" Margin="174,165,0,0" VerticalAlignment="Top"/>
        <TextBox Name="nameTextBox" HorizontalAlignment="Left" Margin="323,117,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="passwordTextBox" HorizontalAlignment="Left" Margin="323,169,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Name="loginButton" Content="Inloggen" HorizontalAlignment="Left" Margin="195,230,0,0" VerticalAlignment="Top" Height="36" Width="97" Click="loginButton_Click"/>
        <Button Name="logoutButton" Content="Afmelden" HorizontalAlignment="Left" Margin="303,230,0,0" VerticalAlignment="Top" Height="36" Width="97" Click="logoutButton_Click"/>

    </Grid>
</Window>
